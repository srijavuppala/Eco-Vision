{
  "manifest_version": 3,
  "name": "1000 Applications",
  "description": "Set a job-application goal, log applications fast, and build confidence through consistency.",
  "version": "0.1.0",
  "action": {
    "default_title": "1000 Applications",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs"],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
